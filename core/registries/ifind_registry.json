{
  "name": "ifind",
  "description": "A Sleuth Kit tool that finds the inode that has a given meta data address.",
  "keywords": ["inode finder", "metadata address", "forensic tool", "file system"],
  "category": "Sleuth Kit",
  "usage": "ifind [options] image [images] meta_addr",
  "examples": [
    "ifind image.dd 12345",
    "ifind -f ntfs image.dd 12345",
    "ifind -o 512 image.dd 12345"
  ],
  "common_flags": {
    "-f": "File system type",
    "-o": "Sector offset",
    "-s": "Sector size",
    "-v": "Verbose output"
  },
  "output_format": "text",
  "installation": "apt install sleuthkit",
  "documentation": "https://www.sleuthkit.org/sleuthkit/man/ifind.html"
}
