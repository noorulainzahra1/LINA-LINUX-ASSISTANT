{
	"tool_name": "sqlmap",
	"base_command": "sqlmap",
	"parameters": [
		{
			"flag": "-u",
			"description": "Target URL containing the parameter to test (e.g., http://target.com/index.php?id=1).",
			"keywords": ["url", "target", "link"],
			"requires_value": true
		},
		{
			"flag": "--data",
			"description": "HTTP POST data string to send with the request (for testing POST parameters).",
			"keywords": ["post", "data", "payload"],
			"requires_value": true
		},
		{
			"flag": "--cookie",
			"description": "HTTP Cookie header value to include in requests.",
			"keywords": ["cookie", "session"],
			"requires_value": true
		},
		{
			"flag": "--risk",
			"description": "Risk level of tests to perform (1-3). Higher values are more intrusive.",
			"keywords": ["risk", "aggressiveness"],
			"requires_value": true
		},
		{
			"flag": "--level",
			"description": "Number of payload levels to test (1-5). Higher levels cover more parameters.",
			"keywords": ["level", "coverage"],
			"requires_value": true
		},
		{
			"flag": "--threads",
			"description": "Number of concurrent HTTP requests (default 1).",
			"keywords": ["threads", "speed"],
			"requires_value": true
		},
		{
			"flag": "--batch",
			"description": "Never ask for user input, use default answers. Useful for automation.",
			"keywords": ["no prompt", "auto", "non interactive"],
			"requires_value": false
		},
		{
			"flag": "--dump",
			"description": "Dump the database entries if injection is successful.",
			"keywords": ["dump", "extract", "database"],
			"requires_value": false
		},
		{
			"flag": "--os-shell",
			"description": "Try to spawn an interactive operating system shell on the target.",
			"keywords": ["shell", "os shell", "command execution"],
			"requires_value": false
		},
		{
			"flag": "--risk=3 --level=5",
			"description": "Shortcut for a very aggressive scan covering all tests.",
			"keywords": ["aggressive", "full", "comprehensive"],
			"requires_value": false,
			"is_bundle": true
		}
	],
	"execution_metadata": {
		"workflow_type": "simple",
		"output_parsing": {
			"type": "text",
			"success_pattern": "sqlmap identified the following injection point",
			"fields": [
				{
					"name": "injection_type",
					"pattern": "Parameter: ([^\\s]+) is vulnerable"
				},
				{
					"name": "database_type",
					"pattern": "back-end DBMS: ([^\\s]+)"
				}
			]
		},
		"progress_patterns": [
			"\\[\\d{2}:\\d{2}:\\d{2}\\]",
			"testing '[^']+'",
			"Payload:"
		]
	}
}
