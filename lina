#!/bin/bash
#
# LINA Application Launcher
# Automatically starts both backend and frontend servers
#

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR" || exit 1

# Colors for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
BACKEND_LOG="/tmp/lina_backend.log"
FRONTEND_LOG="/tmp/lina_frontend.log"
PID_FILE="/tmp/lina.pid"

# Function to print colored output
print_status() {
    echo -e "${BLUE}[LINA]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[LINA]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[LINA]${NC} $1"
}

print_error() {
    echo -e "${RED}[LINA]${NC} $1"
}

# Function to cleanup on exit
cleanup() {
    print_status "Shutting down LINA servers..."
    
    # Kill processes
    if [ -f "$PID_FILE" ]; then
        while read -r pid; do
            if kill -0 "$pid" 2>/dev/null; then
                kill "$pid" 2>/dev/null
            fi
        done < "$PID_FILE"
        rm -f "$PID_FILE"
    fi
    
    # Kill any remaining uvicorn/vite processes
    pkill -f "uvicorn.*api.main:app" 2>/dev/null
    pkill -f "vite" 2>/dev/null
    
    print_success "Shutdown complete"
    exit 0
}

# Trap signals for cleanup
trap cleanup SIGINT SIGTERM EXIT

# Check if already running
if [ -f "$PID_FILE" ]; then
    OLD_PID=$(head -n 1 "$PID_FILE")
    if kill -0 "$OLD_PID" 2>/dev/null; then
        print_warning "LINA appears to be already running (PID: $OLD_PID)"
        print_status "Use 'lina stop' to stop it, or 'lina restart' to restart"
        exit 1
    else
        rm -f "$PID_FILE"
    fi
fi

# Handle stop command
if [ "$1" == "stop" ]; then
    print_status "Stopping LINA servers..."
    if [ -f "$PID_FILE" ]; then
        while read -r pid; do
            if kill -0 "$pid" 2>/dev/null; then
                kill "$pid" 2>/dev/null
            fi
        done < "$PID_FILE"
        rm -f "$PID_FILE"
    fi
    pkill -f "uvicorn.*api.main:app" 2>/dev/null
    pkill -f "vite" 2>/dev/null
    print_success "Stopped"
    exit 0
fi

# Handle restart command
if [ "$1" == "restart" ]; then
    "$SCRIPT_DIR/lina" stop
    sleep 2
    "$SCRIPT_DIR/lina"
    exit 0
fi

# Handle status command
if [ "$1" == "status" ]; then
    BACKEND_RUNNING=$(curl -s http://localhost:$BACKEND_PORT/api/health > /dev/null && echo "yes" || echo "no")
    FRONTEND_RUNNING=$(curl -s http://localhost:$FRONTEND_PORT > /dev/null && echo "yes" || echo "no")
    
    echo "Backend (port $BACKEND_PORT): $BACKEND_RUNNING"
    echo "Frontend (port $FRONTEND_PORT): $FRONTEND_RUNNING"
    
    if [ "$BACKEND_RUNNING" == "yes" ] && [ "$FRONTEND_RUNNING" == "yes" ]; then
        exit 0
    else
        exit 1
    fi
fi

# Print banner
clear
echo -e "${GREEN}"
echo "╔════════════════════════════════════════╗"
echo "║          LINA APPLICATION              ║"
echo "║    AI-Powered Cybersecurity Assistant   ║"
echo "╚════════════════════════════════════════╝"
echo -e "${NC}"

# Check Python virtual environment
if [ ! -d "venv" ]; then
    print_error "Virtual environment not found. Please run setup first."
    exit 1
fi

# Check Node modules
if [ ! -d "frontend/node_modules" ]; then
    print_warning "Frontend dependencies not installed. Installing..."
    cd frontend && npm install && cd .. || exit 1
fi

# Check for required files
if [ ! -f "api/main.py" ]; then
    print_error "Backend not found. Are you in the correct directory?"
    exit 1
fi

# Start backend
print_status "Starting backend server (port $BACKEND_PORT)..."
source venv/bin/activate
python3 -m uvicorn api.main:app --host 0.0.0.0 --port $BACKEND_PORT --reload > "$BACKEND_LOG" 2>&1 &
BACKEND_PID=$!
echo $BACKEND_PID >> "$PID_FILE"

# Wait for backend to be ready
print_status "Waiting for backend to initialize..."
sleep 3
for i in {1..30}; do
    # Try health endpoint first, then root endpoint as fallback
    if curl -s http://localhost:$BACKEND_PORT/api/health > /dev/null 2>&1 || \
       curl -s http://localhost:$BACKEND_PORT/ > /dev/null 2>&1; then
        print_success "Backend is running!"
        break
    fi
    if [ $i -eq 30 ]; then
        print_error "Backend failed to start after 30 seconds."
        print_error "Check the logs: $BACKEND_LOG"
        print_status "Last 20 lines of backend log:"
        tail -n 20 "$BACKEND_LOG" 2>/dev/null || echo "Could not read log file"
        exit 1
    fi
    sleep 1
done

# Start frontend
print_status "Starting frontend server (port $FRONTEND_PORT)..."
cd frontend
npm run dev > "$FRONTEND_LOG" 2>&1 &
FRONTEND_PID=$!
echo $FRONTEND_PID >> "$PID_FILE"
cd ..

# Wait for frontend to be ready
print_status "Waiting for frontend to initialize..."
sleep 5
for i in {1..30}; do
    if curl -s http://localhost:$FRONTEND_PORT > /dev/null 2>&1; then
        print_success "Frontend is running!"
        break
    fi
    if [ $i -eq 30 ]; then
        print_warning "Frontend may still be starting. Check $FRONTEND_LOG"
    fi
    sleep 1
done

# Print status
echo ""
print_success "╔════════════════════════════════════════╗"
print_success "║        LINA is now running!            ║"
print_success "╠════════════════════════════════════════╣"
print_success "║  Backend:  http://localhost:$BACKEND_PORT     ║"
print_success "║  Frontend: http://localhost:$FRONTEND_PORT    ║"
print_success "║  API Docs: http://localhost:$BACKEND_PORT/api/docs ║"
print_success "╚════════════════════════════════════════╝"
echo ""

# Try to open browser (if xdg-open is available)
if command -v xdg-open > /dev/null 2>&1; then
    print_status "Opening browser..."
    sleep 2
    xdg-open "http://localhost:$FRONTEND_PORT" > /dev/null 2>&1 &
fi

# Print log locations
print_status "Backend logs: $BACKEND_LOG"
print_status "Frontend logs: $FRONTEND_LOG"
print_status "Press Ctrl+C to stop"
echo ""

# Keep script running and monitor processes
while true; do
    # Check if processes are still alive
    if ! kill -0 $BACKEND_PID 2>/dev/null; then
        print_error "Backend process died. Check $BACKEND_LOG"
        break
    fi
    
    if ! kill -0 $FRONTEND_PID 2>/dev/null; then
        print_error "Frontend process died. Check $FRONTEND_LOG"
        break
    fi
    
    sleep 5
done

cleanup

